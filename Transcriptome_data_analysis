###################Data filtering
java -jar /home/Softwares/Trimmomatic-0.39/trimmomatic-0.39.jar PE EC_RNAseq_R1.fastq EC_RNAseq_R2.fastq EC_RNAseq_R1_paired.fastq EC_RNAseq_R1_unpaired.fastq EC_RNAseq_R2_paired.fastq EC_RNAseq_R2_unpaired.fastq ILLUMINACLIP:/home/Softwares/Trimmomatic-0.39/adapters/Trueseq_PE.fa:2:30:10 LEADING:20 TRAILING:20 SLIDINGWINDOW:4:20 MINLEN:60 -threads 15

###################Assembly and statistics
/home/Softwares/trinityrnaseq-v2.14.0/Trinity --seqType fq --left EC_RNAseq_R1_paired.fastq,EC_RNAseq_R1_unpaired.fastq --right EC_RNAseq_R2_paired.fastq,EC_RNAseq_R2_unpaired.fastq --CPU 40 --max_memory 200G --output EC_Trinity_Assembly
/home/Softwares/trinityrnaseq-v2.14.0/util/TrinityStats.pl Trinity.fasta

###################Gene expression analysis
export PATH=/home/anaconda3/bin:$PATH
kallisto index -i EC_cds.idx EC_high_confidence_genes.fasta
kallisto quant -i EC_cds.idx -o EC_output_kallisto --plaintext EC_RNAseq_R1_paired.fastq EC_RNAseq_R2_paired.fastq -t 20
